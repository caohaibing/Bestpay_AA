<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states-->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/input_2" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/input_2" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false"  android:drawable="@drawable/input_over_2" />
    <item android:state_focused="true" android:state_selected="true"  android:drawable="@drawable/input_over_2" />

    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/input_2" />
</selector>

